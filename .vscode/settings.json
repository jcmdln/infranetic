{
  "ansible.ansibleLint.enabled": true,
  "editor.formatOnSave": true,
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 100,
  "files.associations": {
    "${workspaceFolder}/.ansible-lint": "yaml",
    "${workspaceFolder}/requirements/*.txt": "pip-requirements"
  },
  "files.exclude": {
    ".cache": true,
    ".config": true,
    ".local": true,
    ".vagrant.d": true,
    "build": true
  },
  "prettier.useEditorConfig": true,
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": [".github/workflows"],
    "https://raw.githubusercontent.com/ansible-community/schemas/main/f/ansible.json": [
      "${workspaceFolder}/roles/*/tasks/*.yaml",
      "${workspaceFolder}/setup-vagrant.yaml",
      "${workspaceFolder}/site.yaml"
    ],
    "https://raw.githubusercontent.com/ansible-community/schemas/main/f/ansible-vars.json": [
      "${workspaceFolder}/roles/*/defaults/*.yaml",
      "${workspaceFolder}/roles/*/vars/*.yaml"
    ],
    "https://raw.githubusercontent.com/ansible-community/schemas/main/f/ansible-inventory.json": [
      "${workspaceFolder}/inventory/*.yaml"
    ]
  },
  "[ansible]": {
    "editor.defaultFormatter": "redhat.ansible"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml.j2]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
