{
  "ansible.ansibleLint.enabled": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 100,
  "files.associations": {
    ".ansible-lint": "yaml",
    "requirements/*.txt": "pip-requirements",
    "site-*.yml": "ansible",
    "**/roles/**/defaults/**/*.yml": "ansible",
    "**/roles/**/handlers/**/*.yml": "ansible",
    "**/roles/**/tasks/**/*.yml": "ansible",
    "**/roles/**/vars/**/*.yml": "ansible"
  },
  "files.exclude": {
    "**/.cache/**": true,
    "**/.config/**": true,
    "**/.local/**": true,
    "**/.vagrant.d/**": true,
    "build": true
  },
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": [".github/workflows"],
    "https://raw.githubusercontent.com/ansible-community/schemas/main/f/ansible.json": [
      "${workspaceFolder}/roles/*/tasks/*.yml",
      "${workspaceFolder}/setup-vagrant.yml",
      "${workspaceFolder}/site.yml"
    ],
    "https://raw.githubusercontent.com/ansible-community/schemas/main/f/ansible-vars.json": [
      "${workspaceFolder}/roles/*/defaults/*.yml",
      "${workspaceFolder}/roles/*/vars/*.yml"
    ],
    "https://raw.githubusercontent.com/ansible-community/schemas/main/f/ansible-inventory.json": [
      "${workspaceFolder}/inventory/*.yml"
    ]
  },
  "[ansible]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
